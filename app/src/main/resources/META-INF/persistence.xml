<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="BancoDados">
        <class>TrabalhoJava.Entidades.Item</class>
        <class>TrabalhoJava.Entidades.Pedido</class>
        <class>TrabalhoJava.Entidades.Usuario</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:sqlite:banco.data"/>
            <property name="javax.persistence.jdbc.user" value=""/>
            <property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
        </properties>

    </persistence-unit>
</persistence>