<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="BancoDados">
        <class>TrabalhoJava.Entidades.Item</class>
        <class>TrabalhoJava.Entidades.Pedido</class>
        <class>TrabalhoJava.Entidades.Usuario</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC" />
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite:banco.data" />
            <property name="jakarta.persistence.jdbc.user" value="" />
            <property name="jakarta.persistence.jdbc.password" value="" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLiteDialect" />
            <property name="jakarta.persistence.schema-generation.database.action" value="create" />
        </properties>
    </persistence-unit>
</persistence>